<form {{action 'authenticate' on='submit'}}>
  <h1 class="text-center">Log in</h1>
  <div class="form-group">
    <span class="fa fa-envelope"></span>
    {{input id='identification' value=identification
            class='form-control login-input' type='text' key-up='moveLabel'}}
    <label class="username-label" for="identification">Enter Login</label>
    <span class="underline username-label"></span>
  </div>
  <div class="form-group password-label">
    <span class="fa fa-lock"></span>
    {{input id='password' value=password
            class='form-control login-input' type='password' key-up='moveLabel'}}
    <label class="password-label" for="password">Password</label>
    <span class="underline password-label"></span>
  </div>
  <button type="submit" class="btn btn-default btn-block login-form__btn">
    Login
  </button>
  {{#link-to "dashboard" title="Create Users"
     class="btn btn-default btn-block create-user--btn"}}
     {{fa-icon "plus-circle" ariaLabel="Create Users" }}
     Create User
  {{/link-to}}
  <p class="mt-3">
    <a href="#">Forgot Password?</a>
  </p>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</form>
