<div class="list-row align-items-center">
	<div class="col-1 table-item">{{user.id}}</div>
	<div class="col table-item">{{user.person.firstName}} {{user.person.lastName}}</div>
	<div class="col table-item">{{user.username}}</div>
	<div class="col-3 table-item"> <a href="mailto:{{user.email}}" target="_blank">{{user.email}}</a></div>
	<div class="col table-item">{{moment-format user.passwordCreatedAt 'YYYY-MM-DD HH:mm'}}</div>
	<div class="col-1 table-item">{{user.person.age}}</div>
	<div class="col-2 table-item">
		{{#link-to "user" user
			title="View User"
			class="btn-action profile"}}
			{{fa-icon "user"}}
		{{/link-to}}
		{{#link-to "edit" user
			title="Edit User"
			class="btn-action edit"}}
			{{fa-icon "edit"}}
		{{/link-to}}
		<button class="btn-action delete"
			type="button"
			name="button"
			{{action 'setUserToDelete' user}}
			data-toggle="modal"
			data-target="#deleteModal{{user.id}}"
			title="Delete User">
			{{fa-icon "times"}}
		</button>
	</div>
</div>
<div class="modal fade"
	id="deleteModal{{user.id}}"
	tabindex="-1"
	role="dialog"
	aria-labelledby="deleteModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-body">
				<div class="yeild-symbol">
					<span class="yeild-line"></span>
					<span class="yeild-dot"></span>
				</div>
				<h2>Are you sure?</h2>
				<div class="text-muted">
					You will not be able to undo this action.
				</div>
			</div>
			<div class="modal-footer">
				<button type="button"
								class="btn btn-close"
								{{action (action "cancelDeletingUser")}}
								data-dismiss="modal">
					Cancel
				</button>
				<button type="button"
								class="btn btn-comfirm"
								data-dismiss="modal"
								{{action (action "deleteUser" userToDelete)}}>
					Yes, delete!
				</button>
			</div>
		</div>
	</div>
</div>
