<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Username</th>
				<th>Age</th>
				<th>Gender</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>0</td>
				<td>Example Name</td>
				<td>ExampleUsername</td>
				<td>20</td>
				<td>Male</td>
				<td>
					<button class="btn-action profile"
						type="button"
						name="button"
						data-toggle="tooltip"
						data-placement="top"
						title="View User">
						{{fa-icon "user"}}
					</button>
					<button class="btn-action edit"
						type="button"
						name="button"
						data-toggle="tooltip"
						data-placement="top"
						title="Edit User Details">
						{{fa-icon "edit"}}
					</button>
					<button class="btn-action delete"
						type="button"
						name="button"
						data-toggle="modal"
						data-target="#deleteModal"
						title="Edit User Details">
						{{fa-icon "times"}}
					</button>
				</td>
			</tr>
			<tr>
				<td>1</td>
				<td>Example Name</td>
				<td>ExampleUsername2</td>
				<td>30</td>
				<td>Female</td>
				<td>
					<button class="btn-action profile"
						type="button"
						name="button"
						data-toggle="tooltip"
						data-placement="top"
						title="View User">
						{{fa-icon "user"}}
					</button>
					<button class="btn-action edit"
						type="button"
						name="button"
						data-toggle="tooltip"
						data-placement="top"
						title="Edit User Details">
						{{fa-icon "edit"}}
					</button>
					<button class="btn-action delete"
						type="button"
						name="button"
						data-toggle="modal"
						data-target="#deleteModal"
						title="Delete User">
						{{fa-icon "times"}}
					</button>
				</td>
			</tr>
			{{#each users as |user|}}
				<tr>
					<td>{{user.id}}</td>
					<td>{{user.firstName}} {{user.lastName}}</td>
					<td>{{user.username}}</td>
					<td>{{user.age}}</td>
					<td>{{user.gender}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>
