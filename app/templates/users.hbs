<main class="page-container">
  <div class="page-card">
    <div class="page-card--header">
      <h4 class="header--title">All Users</h4>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            {{model}}
          	<table class="table table-striped table-hover">
          		<thead>
          			<tr>
          				<th>ID</th>
          				<th>Name</th>
          				<th>Username</th>
                  <th>Email</th>
                  <th>Password Created At</th>
          				<th>Age</th>
          				<th>Actions</th>
          			</tr>
          		</thead>
          		<tbody>
                {{#each model as |user|}}
                  <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.person.firstName}} {{user.person.lastName}}</td>
                    <td>{{user.username}}</td>
                    <td>{{user.email}}</td>
                    <td>{{moment-format user.passwordCreatedAt 'YYYY-MM-DD HH:mm'}}</td>
                    <td>{{user.age}}</td>
                    <td>
                    	<button class="btn-action profile"
                    		type="button"
                    		name="button"
                    		data-toggle="tooltip"
                    		data-placement="top"
                    		title="View User">
                    		{{fa-icon "user"}}
                    	</button>
                    	<button class="btn-action edit"
                    		type="button"
                    		name="button"
                    		data-toggle="tooltip"
                    		data-placement="top"
                    		title="Edit User Details">
                    		{{fa-icon "edit"}}
                    	</button>
                    	<button class="btn-action delete"
                    		type="button"
                    		name="button"
                    		data-toggle="modal"
                    		data-target="#deleteModal"
                    		title="Delete User">
                    		{{fa-icon "times"}}
                    	</button>
                    </td>
                  </tr>
                {{/each}}
          		</tbody>
          	</table>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade"
      id="deleteModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="deleteModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <div class="yeild-symbol">
              <span class="yeild-line"></span>
              <span class="yeild-dot"></span>
            </div>
            <h2>Are you sure?</h2>
            <div class="text-muted">
              You will not be able to undo this action.
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-close" data-dismiss="modal">
              Cancel
            </button>
            <button type="button" class="btn btn-comfirm"> Yes, delete!</button>
          </div>
        </div>
      </div>
    </div>
		{{outlet}}
  </div>
</main>
