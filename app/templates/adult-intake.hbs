<main class="page-container">
	<div class="container">
		<div class="card card--adult-intake">
			<div class="card--header">
				<h4 class="header--title">Adult Intake Form</h4>
			</div>
			<div class="card--content">
				<label class="form-label">
					Client Name
					<span class="star">*</span>
				</label>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{input type="text"
											value=firstName
											class="form-control"
											placeholder="First Name"
											required="required"}}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{input type="text"
											value=middleName
											class="form-control"
											placeholder="Middle Name"
											required="required"}}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{input type="text"
											value=lastName
											class="form-control"
											placeholder="Last Name"
											required="required"}}
						</div>
					</div>
				</div>
				<div class="row justify-content-between">
					<div class="col">
						<div class="form-group">
							<label class="form-label">
								Date of Birth
								<span class="star">*</span>
							</label>
								<div class="input-group">
									{{input type="date"
													value=dateOfBirth
													class="form-control datepicker date"}}
									<span class="input-group-addon">
										{{fa-icon "calendar"
															ariaLabel="Pick a Date"}}
									</span>
								</div>
						</div>
					</div>
					<div class="column">
						<div class="form-group">
							<label class="form-label">
								Current Age
								<span class="star">*</span>
							</label>
							{{input type="number"
											value=age
											placeholder="XX"
											min="0"
											class="form-control"}}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							<label class="form-label">
								Social Security #
								<span class="star">*</span>
							</label>
							{{input type="number"
											value=socialSecurityNumber
											data-inputmask="'mask':'999-99-9999'"
											placeholder="XXX-XX-XXXX"
											min="0"
											class="form-control"}}
						</div>
					</div>
				</div>
				<label class="form-label">
					Address
					<span class="star">*</span>
				</label>
				<div class="row">
					<div class="col-10">
						<div class="form-group">
							{{input type="text"
											value=streetName
											placeholder="Street"
											class="form-control"}}
						</div>
					</div>
					<div class="col-2">
						<div class="form-group">
							{{input type="number"
											value=streetNumber
											placeholder="(Apt. #)"
											min="0"
											class="form-control"}}
						</div>
					</div>
					<div class="col-4">
						<div class="form-group">
							{{input type="text"
											value=cityData.name
											placeholder="City"
											class="form-control"}}
						</div>
					</div>
					<div class="col-4">
						<div class="form-group">
							{{input type="text"
											value=stateData.name
											placeholder="State"
											class="form-control"}}
						</div>
					</div>
					<div class="col-4">
						<div class="form-group">
							{{input type="number"
											value=zipcode
											placeholder="Zip code"
											min="0"
											class="form-control"}}
						</div>
					</div>
				</div>
			</div>
			<div class="card--footer">
				<button class="btn btn-card" type="">Next</button>
			</div>
		</div>
	</div>
</main>
